<!DOCTYPE HTML>
<html>
	<head>
		<title>Register New League</title>
	</head>
	<body>
		<h2 class="quite">Create a New League</h2>
		<div align="left">
			<%= form_for @fantasy_league, :url => { :action => "register_league" } do |f| %>
			<fieldset>
				<div class="field">
					<%= f.label :name %>
					<br />
					<%= f.text_field :name %>
				</div>
				<div class="field">
					<%= f.label :type %>
					<br />
					<%= f.text_field :league_type %>
					<% if flash[:error] %>
					<div class="error">
						<%= flash[:error] %>
					</div>
					<%end%>
				</div>
				<div class="field">
					<%= f.submit "Register League" %>
				</div>

			</fieldset>
			<% end %>
		</div>
	</body>

</html>

